---
import type { Project } from "../data/projects";

type Props = {
  project: Project;
  lang: "en" | "cs";
};

const { project, lang } = Astro.props;
const { title, description, image, url } = project;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="group relative flex h-full flex-col overflow-hidden rounded-xl border border-border bg-background transition-colors hover:border-accent"
>
  <div class="aspect-video w-full overflow-hidden border-b border-border/50">
    <img
      src={image}
      alt={`${title} preview`}
      class="h-full w-full object-cover object-top"
      loading="lazy"
    />
  </div>
  <div class="flex flex-1 flex-col p-5">
    <h3 class="mb-2 text-xl font-bold text-foreground group-hover:text-accent">
      {title}
    </h3>
    <p class="text-sm leading-relaxed text-text-muted">
      {description[lang]}
    </p>
  </div>
</a>
